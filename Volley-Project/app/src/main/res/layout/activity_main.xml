<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/but_string_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用StringRequest" />

    <Button
        android:id="@+id/but_json_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用JsonRequest" />

    <Button
        android:id="@+id/but_image_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用ImageRequest" />

    <Button
        android:id="@+id/but_image_loader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用ImageLoader" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/but_network_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/iv_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
