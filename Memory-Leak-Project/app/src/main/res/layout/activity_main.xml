<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/but_instance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1、单例模式引起的内存泄露" />

    <Button
        android:id="@+id/but_handler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2、Handler引起的内存泄露" />

    <Button
        android:id="@+id/but_innner_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3、内部类引起的内存泄露" />

    <Button
        android:id="@+id/but_anonymous_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4、匿名内部类引起的内存泄露" />
</LinearLayout>
